<installation version="1.0">
    <info>
        <appname>Squirrel SQL Client</appname>
        <appversion>1.0 Alpha 1</appversion>
        <authors>
            <author email="colbell@users.sourceforge.net" name="Colin Bell"/>
        </authors>
        <url>http://sourceforge.net/projects/squirrel-sql/</url>
    </info>
    <guiprefs width="640" resizable="no" height="480"/>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    <resources>
        <res id="LicencePanel.licence" src="doc\licences\squirrel_licence.txt"/>
        <res id="HTMLInfoPanel.info" src="doc\readme.html"/>
    </resources>
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="HTMLInfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    <packs>
        <pack required="yes" name="Base">
            <description>SQL Client</description>
            <file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\core\dist\lib"/>
            <file targetdir="$INSTALL_PATH" src="doc"/>
            <file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\core\dist\squirrel-sql.bat"/>
            <file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\core\dist\squirrel-sql.sh"/>
        </pack>
        <pack required="no" name="Base Source">
            <description>SQL Client source</description>
            <file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\core\dist\src"/>
        </pack>
        <pack required="no" name="Plugin - Look and Feel">
            <description>Allows the Look and Feel of the application to be changed.</description>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\laf\dist\laf.jar"/>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\laf\dist\laf\"/>
        </pack>
        <pack required="no" name="Plugin - SQL Scripts">
            <description>Load/save of SQL scripts etc.</description>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\sqlscript\dist\sqlscript.jar"/>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\sqlscript\dist\sqlscript\"/>
        </pack>
        <pack required="no" name="Plugin - Saved Queries">
            <description>Allows queries to be saved and restored.</description>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\favs\dist\favs.jar"/>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\favs\dist\favs\"/>
        </pack>
        <pack required="no" name="Plugin - Database Information">
            <description>Database Information.</description>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\dbinfo\dist\dbinfo.jar"/>
            <file targetdir="$INSTALL_PATH/plugins" src="..\squirrel-sql-dist\squirrel-sql-1.1alpha1\plugins\dbinfo\dist\dbinfo\"/>
        </pack>
    </packs>
</installation>

<installation version="1.0">

	<info>
		<appname>SQuirreL SQL Client</appname>
		<appversion>@squirrel.version@</appversion>
		<authors>
			<author email="gerdwagner@users.sourceforge.net" name="Gerd Wagner"/>
			<author email="manningr@users.sourceforge.net" name="Rob Manning"/>
			<author email="gwghome@users.sourceforge.net" name="Glenn Griffin"/>
			<author email="colbell@users.sourceforge.net" name="Colin Bell"/>
		</authors>
		<url>http://www.squirrelsql.org</url>
		<uninstaller write="yes"/>
	</info>

	<guiprefs height="480" resizable="yes" width="640"/>

	<locale>
		<langpack iso3="eng"/>
	</locale>

	<resources>
		<res	src="../../squirrel-sql-dist/squirrel-sql/core/dist/doc/licences/squirrel_licence.txt"
				id="LicencePanel.licence"/>
		<res	src="installer-readme.html"
				id="HTMLInfoPanel.info"/>
		<res	src="shortcutSpec.xml"
				id="shortcutSpec.xml"/>
      <res	src="Unix_shortcutSpec.xml"
            id="Unix_shortcutSpec.xml"/>
	</resources>

	<panels>
		<panel classname="HelloPanel"/>
		<panel classname="HTMLInfoPanel"/>
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="ShortcutPanel"/>
		<panel classname="FinishPanel"/>
	</panels>

	<native type="izpack" name="ShellLink.dll"/>

	<packs>
		<pack name="Base" required="yes">
			<description>SQL Client</description>
			<singlefile	target="$INSTALL_PATH/plugins/readme.txt"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/readme.txt"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/doc"/>
			<file	targetdir="$INSTALL_PATH/doc"
					src="../../sql12/web-site/faq.html"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/icons"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/squirrel-sql.bat"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/addpath.bat"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/squirrel-sql.sh"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/log4j.properties"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/squirrel-sql.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/fw.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/log4j.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/nanoxml-2.1.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
				src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/commons-cli.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
				src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/forms.jar"/>

			<parsable targetfile="$INSTALL_PATH/squirrel-sql.bat"/>
			<parsable targetfile="$INSTALL_PATH/squirrel-sql.sh" type="shell"/>

			<!-- Make Unix script executable. -->
			<executable	targetfile="$INSTALL_PATH/squirrel-sql.sh" stage="never"/>

		</pack>

		<pack name="Standard" required="no" depends="Base">
			<description>Standard Plugins</description>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/codecompletion"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/codecompletion.jar"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/editextras"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/editextras.jar"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/graph"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/graph.jar"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/laf"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/laf.jar"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/sqlbookmark"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/sqlbookmark.jar"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/sqlscript"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/sqlscript.jar"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/syntax"/>
			<file	targetdir="$INSTALL_PATH/plugins"
					src="../../squirrel-sql-dist/squirrel-sql/core/dist/plugins/syntax.jar"/>
		</pack>

		<pack required="no" preselected="no" name="Optional Plugin - Firebird ">
			<description>This optional plugin adds functionality that is specific to the Firebird DBMS  </description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/firebird/dist/firebird.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/firebird/dist/firebird"/>
		</pack>				

		<pack required="no" preselected="no" name="Optional Plugin - Microsoft SQL Server ">
			<description>This optional plugin allows you to performs MSSQL-specific commands with a few clicks </description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/mssql/dist/mssql.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/mssql/dist/mssql"/>
		</pack>				

		<pack required="no" preselected="no" name="Optional Plugin - MySQL ">
			<description>This optional plugin adds MySQL specific functionality  </description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/mysql/dist/mysql.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/mysql/dist/mysql"/>
		</pack>				

		<pack required="no" preselected="no" name="Optional Plugin - Oracle">
			<description>This optional plugin adds Oracle-specific functionality </description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/oracle/dist/oracle.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/oracle/dist/treetable.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/oracle/dist/oracle"/>
		</pack>				
				
		<pack required="no" preselected="no" name="Optional Plugin - Session Scripts">
			<description>This plugin allows you to specify SQL statements to be executed when you first connect to a database.</description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/sessionscript/dist/sessionscript.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/sessionscript/dist/sessionscript"/>
		</pack>				

		<pack required="no" preselected="no" name="Optional Plugin - SQL Validator ">
			<description>Provides SQL validation (ISO SQL99) based on results of the Mimer SQL web service </description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/sqlval/dist/sqlval.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/sqlval/dist/sqlval"/>
		</pack>				

        <pack required="no" preselected="no" name="Optional Plugin - Internationalization ">
            <description>Allows translators to quickly find missing translation files </description>
            <file targetdir="$INSTALL_PATH/plugins"
                      src="../../squirrel-sql-dist/squirrel-sql/plugins/i18n/dist/i18n.jar"/>
            <file targetdir="$INSTALL_PATH/plugins"
                      src="../../squirrel-sql-dist/squirrel-sql/plugins/i18n/dist/i18n"/>
    </pack>

    <pack required="no" preselected="no" name="Optional Translation - Spanish">
        <description>Provides native labels and user messages for use in a Spanish locale (Diego Schulz)</description>
    	<file	targetdir="$INSTALL_PATH/lib"
	        	src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/squirrel-sql_es.jar"/>
    </pack>

    <pack required="no" preselected="no" name="Optional Translation - Brazilian Portuguese">
        <description>Provides native labels and user messages for use in a Brazilian locale (Francis Martins)</description>
    	<file	targetdir="$INSTALL_PATH/lib"
	        	src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/squirrel-sql_pt_BR.jar"/>
    </pack>

    <pack required="no" preselected="no" name="Optional Translation - Czech">
        <description>Provides native labels and user messages for use in a Czech locale (Jan Kostrhun)</description>
    	<file	targetdir="$INSTALL_PATH/lib"
	        	src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/squirrel-sql_cs_CZ.jar"/>
    </pack>


    <pack required="no" preselected="no" name="Optional Translation - Bulgarian">
        <description>Provides native labels and user messages for use in a Bulgarian locale (Ivan Dimov)</description>
        <file   targetdir="$INSTALL_PATH/lib"
                        src="../../squirrel-sql-dist/squirrel-sql/core/dist/lib/squirrel-sql_bg_BG.jar"/>
    </pack>

<!-- template that can be used for future optional plugins 

		<pack required="no" preselected="no" name="Optional Plugin - **PLUGIN_NAME** ">
			<description>This optional plugin allows you to **PLUGIN_DESC** </description>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/**PLUGIN_NAME**/dist/**PLUGIN_NAME**.jar"/>
			<file targetdir="$INSTALL_PATH/plugins" 
				  src="../../squirrel-sql-dist/squirrel-sql/plugins/**PLUGIN_NAME**/dist/**PLUGIN_NAME**"/>
		</pack>				

-->

	</packs>
</installation>

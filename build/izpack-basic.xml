<installation version="1.0">
	<info>
		<appname>SQuirreL SQL Client</appname>
		<appversion>1.2beta1</appversion>
		<authors>
			<author email="colbell@users.sourceforge.net" name="Colin Bell"/>
		</authors>
		<url>http://squirrel-sql.sf.net</url>
	</info>

	<guiprefs height="480" resizable="yes" width="640"/>

	<locale>
		<langpack iso3="eng"/>
	</locale>

	<resources>
		<res	src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/doc/licences/squirrel_licence.txt"
				id="LicencePanel.licence"/>
		<res	src="installer-readme.html"
				id="HTMLInfoPanel.info"/>
		<res	src="shortcutSpec.xml"
				id="shortcutSpec.xml"/>
	</resources>

	<panels>
		<panel classname="HelloPanel"/>
		<panel classname="HTMLInfoPanel"/>
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="ShortcutPanel"/>
		<panel classname="FinishPanel"/>
	</panels>

	<native type="izpack" name="ShellLink.dll"/>

	<packs>
		<pack name="Base" required="yes">
			<description>SQL Client</description>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/plugins"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/doc"/>
			<file	targetdir="$INSTALL_PATH/doc"
					src="../../sql12/web-site/faq.html"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/icons"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/squirrel-sql.bat"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/addpath.bat"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/squirrel-sql.sh"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/log4j.properties"/>
			<file	targetdir="$INSTALL_PATH"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/lib/squirrel-sql.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/lib/fw.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/lib/log4j.jar"/>
			<file	targetdir="$INSTALL_PATH/lib"
					src="../../squirrel-sql-dist/squirrel-sql-1.2beta1/core/dist/lib/nanoxml-2.1.jar"/>

			<parsable targetfile="$INSTALL_PATH/squirrel-sql.bat"/>
			<parsable targetfile="$INSTALL_PATH/squirrel-sql.sh"/>

			<!-- Make Unix script executable. -->
			<executable	targetfile="$INSTALL_PATH/squirrel-sql.sh" stage="never"/>

		</pack>
	</packs>
</installation>
